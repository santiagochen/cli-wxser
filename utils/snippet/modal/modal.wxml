

<view class="section"> 

<view class="columns">
  <view class="column has-text-grey is-size-6"><text>Modal</text></view>
</view>

<!--WXSER|modal-->
<view class="columns">
  <view class="column has-text-grey is-size-6"><button bindtap="toggleModal" class="btn is-primary">打开普通Modal</button></view>
</view>
<view class="columns">
  <view class="column">
    
    <view class="modal {{isActive}}">
      <view class="modal-background"></view>
      <view class="modal-content">
        <view class="box">
        <view class="menu">
          <view class="menu-label">章节一</view>
          <view class="menu-list">
            <view class="li"><navigator><text>情节一</text></navigator></view>
            <view class="li"><navigator><text>情节一</text></navigator></view>
          </view>
        </view>
        <view class="menu">
          <view class="menu-label">章节二</view>
          <view class="menu-list">
            <view class="li"><navigator class="is-active"><text>情节一</text></navigator></view>
            <view class="li"><navigator><text>情节一</text></navigator></view>
          </view>
        </view>
        <view class="menu">
          <view class="menu-label">章节三</view>
          <view class="menu-list">
            <view class="li"><navigator><text>情节一</text></navigator></view>
            <view class="li"><navigator><text>情节一</text></navigator></view>
          </view>
        </view>
        </view>
      </view>
      <text class="modal-close is-large fa fa-close"  bindtap="toggleModal" ></text>
    </view>
    
  </view>
</view>
<!--WXSER|Function
toggleModal : function(e){
    var that = this;
    this.setData({
      isActive : (!that.data.isActive) ? "is-active" : ""
    })
  }
-->
<!--WXSER|modal-->


